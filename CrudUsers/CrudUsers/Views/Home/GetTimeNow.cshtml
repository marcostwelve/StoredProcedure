<div class="d-flex align-items-center justify-content-center flex-column">

	<h1 class="text-black">Hora Atual</h1>

	<div class="d-flex align-items-center justify-content-center flex-column">
		<span class="text-dark">@DateTime.Now.ToString("dd/MM/yyyy")</span>
		<p class="text-dark" id="hours"></p>
	</div>
	
</div>

<script>

	document.getElementById('hours').innerText = new Date().toLocaleTimeString();
	setInterval(() => {
		document.getElementById('hours').innerText = new Date().toLocaleTimeString();
	}, 1000);
</script>
