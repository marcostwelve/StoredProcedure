@model User

@if (TempData["MessageSuccess"] != null)
{
	<div class="alert alert-success text-dark" role="alert">
		@TempData["MessageSuccess"]
	</div>
}

@if (TempData["MessageError"] != null)
{
	<div class="alert alert-danger text-dark" role="alert">
		@TempData["MessageError"]
	</div>
}


<div asp-validation-summary="All" class="text-danger"></div>



<div class="container">
	<h1>Registro de Usuários</h1>

	<form asp-action="Cadastrar" asp-controller="Home" method="post">
		<div class="mt-3">
			<label for="UserName" class="form-label">Nome:</label>
			<input type="text" class="form-control" id="UserName" name="UserName" placeholder="Digite o nome do usuário" asp-for="UserName">
		</div>

		<div class="mt-3">
			<label for="LastName" class="form-label">Sobrenome:</label>
			<input type="text" class="form-control" id="LastName" name="LastName" placeholder="Digite o sobrenome do usuário" asp-for="LastName">
		</div>

		<div class="mt-3">
			<label for="Email" class="form-label">E-mail:</label>
			<input type="Email" class="form-control" id="Email" name="Email" placeholder="Digite o e-mail do usuário" asp-for="Email">
		</div>

		<div class="mt-3">
			<label for="Position" class="form-label">Cargo:</label>
			<input type="text" class="form-control" id="Position" name="Position" placeholder="Digite o cargo do usuário" asp-for="Position">
		</div>

		<div class="d-flex mt-5 g2">
			<button type="submit" class="btn btn-success w-50 mx-2">Cadastrar</button>
			<a asp-action="Index" asp-controller="Home" class="btn btn-info w-50 mx-2">Voltar</a>
		</div>
	</form>

</div>